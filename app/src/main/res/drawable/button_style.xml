<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimary"/>
            <corners android:radius="10dp"/>
            <padding android:left="20dp" android:right="20dp" android:bottom="8dp" android:top="8dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="@color/colorPrimaryDark" android:endColor="@color/colorPrimaryDark"/>
            <corners android:radius="10dp"/>
            <padding android:left="20dp" android:right="20dp" android:bottom="8dp" android:top="8dp"/>
        </shape>
    </item>
</selector>